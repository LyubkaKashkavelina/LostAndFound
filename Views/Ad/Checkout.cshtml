    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="PetCategoryId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="PetCategoryId" value="1" class="form-check form-check-inline" />Lost<br />
                <input type="radio" asp-for="PetCategoryId" value="2" class="form-check form-check-inline" />Found<br />
