    <div class="form-group">
        <label asp-for="PetTypeId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select data-toggle="dropdown" class="form-control" asp-for="PetTypeId">
                <option selected="selected">Please select</option>
                <option value="1">Cats</option>
                <option value="2">Dogs</option>
                <option value="3">Birds</option>
                <option value="4">Large animals</option>
                <option value="5">Others</option>
