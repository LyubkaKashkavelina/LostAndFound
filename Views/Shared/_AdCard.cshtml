@model Ad

@{
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "noimage.png");
}

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@photoPath" asp-append-version="true" alt="" class="imageThumbnail">
        <div class="caption">
            <h3>
                <a asp-controller="Ad" asp-action="Details" asp-route-id="@Model.AddId">@Model.PetName</a>
            </h3>
            <p>@Model.AdDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-info"
                   asp-controller="Ad"
                   asp-action="Details"
                   asp-route-id="@Model.AddId">View details</a>
            </p>
        </div>
    </div>
</div>