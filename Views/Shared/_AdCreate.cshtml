@model Ad

<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <h4>You are just one step away from your delicious pies.</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="PetName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PetName" class="form-control" />
                <span asp-validation-for="PetName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AdDescription" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="AdDescription" class="form-control" />
                <span asp-validation-for="AdDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsPopular" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="IsPopular" class="form-control" />
                <span asp-validation-for="IsPopular" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PetCategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PetCategoryId" class="form-control" />
                <span asp-validation-for="PetCategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PetTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PetTypeId" class="form-control" />
                <span asp-validation-for="PetTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-primary" value="Complete order" />
            </div>
        </div>

</form>
